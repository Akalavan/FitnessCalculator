<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textNameEating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название продукта" />

    <TextView
        android:id="@+id/textAnnotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="В 100гр. продукта:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textProteinEating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Белков: " />

        <TextView
            android:id="@+id/textFatEating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Жиров: " />

        <TextView
            android:id="@+id/textCarbohydrateEating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Углеводов: " />
    </LinearLayout>

    <TextView
        android:id="@+id/textCalorieEating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ккал: " />

    <EditText
        android:id="@+id/editTextGram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:ems="10"
        android:hint="ГРАММ"
        android:inputType="number"
        android:text=""
        android:textColor="@color/colorExercise1"
        android:textColorHint="@color/colorExercise"
        android:visibility="visible" />
</LinearLayout>