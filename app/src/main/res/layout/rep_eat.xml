<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akalavan.myapplication.report.reportEat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CalendarView
                android:id="@+id/calendarView2"
                android:layout_width="match_parent"
                android:layout_height="270dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textReportCa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Калории" />

    <TextView
        android:id="@+id/textReportB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Белков" />

    <TextView
        android:id="@+id/textReportF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Жиров" />

    <TextView
        android:id="@+id/textReportW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вода" />

    <TextView
        android:id="@+id/textReportC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Углеводы" />

</LinearLayout>